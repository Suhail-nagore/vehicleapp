<%- include("header"); -%>



    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/styles.css">
        <title>Search Results</title>
        <style>
            .container1 {
                max-width: 800px;
                /* Adjust the max-width as needed for your content */
                margin: 0 auto;
                margin-top: 5rem;
                padding: 20px;
            }

            h1 {
                font-size: 24px;
                margin-bottom: 20px;
            }

            p {
                font-size: 18px;
                margin-bottom: 10px;
            }





            @media screen and (max-width: 768px) {
                h1 {
                    font-size: 20px;
                }

                p {
                    font-size: 16px;
                }

                .call-button {
                    padding: 3px 8px;
                }
            }

            a {
                background-color: #007bff;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 3px;
                cursor: pointer;
            }

            a:hover {
                background-color: rgb(20, 181, 20);
                color: white;
                text-decoration: none;
            }
        </style>
    </head>

    <body>
        <div class="container1">
            <h1>Search Results</h1>
            <% if (found) { %>
                <p><strong>Name:</strong>
                    <%= name %>
                </p>
                <p><strong>Phone Number:</strong>
                    <%= phoneNumber %>
                        <a class="call-button" href="tel:<%= phoneNumber %>">Call Now</a>
                </p>
                <% } else { %>
                    <p>No records found for this vehicle number.</p>
                    <% } %>
                        <a href="/">Back to Homepage</a>
        </div>
    </body>



    </html>