<%- include("header"); -%>





    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/styles.css">
        <title>Vehicle owner</title>
    </head>

    <body>
        <div class="container">
            <h1>Insert Data</h1>
            <form action="/insert" method="post">
                <input type="text" name="vehicleNumber" placeholder="Vehicle Number" required>
                <input type="text" name="name" placeholder="Name" required>
                <input type="text" name="phoneNumber" placeholder="Phone Number" required>
                <button class="btn" type="submit">Submit</button> <span class="success-message">
                    <%= successMessage %>
                </span>
            </form>
        </div>
        <div class="container">
            <h1>Search Data</h1>
            <form action="/search" method="post">
                <input type="text" name="searchVehicleNumber" placeholder="Search by Vehicle Number" required>
                <button class="btn" type="submit">Search</button>
            </form>
        </div>
    </body>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>&copy; <%= new Date().getFullYear() %> <a target="_blank" class="simple"
                                href="https://www.gozoomtech.com">Gozoom
                                Technologies</a></p>
                    <p>This app is Deployed and Designed by Gozoom Technologies</p>
                </div>
            </div>
        </div>
    </footer>


    </html>